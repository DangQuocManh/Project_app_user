<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SearchAdvancedFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_test"
        android:id="@+id/linear_top_user">
        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/imb_back_search_user"
            android:background="@drawable/baseline_arrow_back_ios_black_18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tìm kiếm nâng cao"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_type_product_user"
        android:text="Loại sản phẩm:"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@id/linear_top_user"
        android:layout_marginTop="98dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/spin_type_product_user"
        android:layout_below="@id/txt_type_product_user"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        tools:src="@drawable/bg_search_advanced"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_brand_product_user"
        android:text="Hãng sản phẩm:"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@id/spin_type_product_user"
        android:layout_marginTop="18dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/spin_brand_product_user"
        android:layout_below="@id/txt_brand_product_user"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        tools:src="@drawable/bg_search_advanced"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_price_product_search_user"
        android:text="Giá sản phẩm:"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@id/spin_brand_product_user"
        android:layout_marginTop="18dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/spin_price_product_user"
        android:layout_below="@id/txt_price_product_search_user"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        tools:src="@drawable/bg_search_advanced"/>

    <Button
        android:id="@+id/btn_search_advanced_user"
        android:layout_width="198dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="124dp"
        android:background="@drawable/login_button_bk"
        android:text="Tìm kiếm"
        android:textSize="14sp" />
</RelativeLayout>