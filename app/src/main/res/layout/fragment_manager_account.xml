    <TextView
        android:id="@+id/txt_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Thay đổi thông tin"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="296dp"
            android:layout_height="48dp"
            android:id="@+id/et_name_change"
            android:layout_gravity="center"
            android:background="@drawable/edt"
            android:hint="Tên người dùng"
            android:textSize="16sp"
            android:paddingLeft="16dp"
            android:layout_marginTop="42dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:layout_below="@id/txt_top" />
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="296dp"
            android:layout_height="48dp"
            android:id="@+id/et_email_change"
            android:layout_gravity="center"
            android:background="@drawable/edt"
            android:hint="Email"
            android:textSize="16sp"
            android:paddingLeft="16dp"
            android:layout_marginTop="22dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:layout_below="@id/et_name_change"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="296dp"
            android:layout_height="48dp"
            android:id="@+id/et_phone_change"
            android:layout_gravity="center"
            android:background="@drawable/edt"
            android:hint="Số điện thoại"
            android:textSize="16sp"
            android:paddingLeft="16dp"
            android:layout_marginTop="22dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:layout_below="@id/et_email_change"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="296dp"
            android:layout_height="48dp"
            android:id="@+id/et_address_change"
            android:layout_gravity="center"
            android:background="@drawable/edt"
            android:hint="Địa chỉ"
            android:textSize="16sp"
            android:paddingLeft="16dp"
            android:layout_marginTop="22dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:layout_below="@id/et_phone_change"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_change"
        android:layout_width="268dp"
        android:layout_height="42dp"
        android:layout_below="@id/et_address_change"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/login_button_bk"
        android:gravity="center"
        android:text="Thay đổi"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"/>
    </RelativeLayout>