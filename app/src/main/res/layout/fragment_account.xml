<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AccountFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="208dp"
           android:background="@drawable/bg_account"
           android:gravity="center"
           android:id="@+id/ln_top">
           <LinearLayout
               android:layout_height="match_parent"
               android:layout_width="match_parent"
               android:background="@drawable/ic_login_bk"
               android:contentDescription="login background"
               android:gravity="center"
               android:orientation="vertical">
          <de.hdodenhof.circleimageview.CircleImageView
              android:layout_width="86dp"
              android:layout_height="86dp"
              android:id="@+id/imv_change_avatar"
              android:layout_gravity="center"
              android:src="@drawable/avatar1"
              android:elevation="@dimen/cardview_compat_inset_shadow"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/txt_name_account"
                   android:layout_marginTop="12dp"
                   android:text="QuocManh"
                   android:textSize="18sp"
                   android:textColor="@color/black"
                   android:gravity="center"
                   android:textStyle="bold"/>
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_below="@id/ln_top"
           android:layout_marginTop="18dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="54dp"
               android:orientation="horizontal"
               android:layout_gravity="center">
               <ImageView
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:background="@drawable/cart"
                   android:layout_margin="12dp"
                   android:layout_marginTop="14dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/txt_list_order"
                   android:text="@string/list_order"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textColor="@color/black"
                   android:textSize="18sp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="54dp"
               android:orientation="horizontal"
               android:layout_gravity="center">
               <ImageView
                   android:layout_width="24dp"
                   android:layout_height="28dp"
                   android:background="@mipmap/bookmark"
                   android:layout_margin="12dp"
                   android:layout_marginTop="14dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/txt_list_post_favorite"
                   android:text="@string/list_post_favorite"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textColor="@color/black"
                   android:textSize="18sp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="54dp"
               android:orientation="horizontal"
               android:layout_gravity="center">
               <ImageView
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:background="@drawable/baseline_done_outline_black_18dp"
                   android:layout_margin="12dp"
                   android:layout_marginTop="14dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/txt_infor_accou"
                   android:text="Thông tin tài khoản"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textColor="@color/black"
                   android:textSize="18sp"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="54dp"
               android:orientation="horizontal"
               android:layout_gravity="center">
               <ImageView
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:background="@drawable/outline_edit_calendar_black_18dp"
                   android:layout_margin="12dp"
                   android:layout_marginTop="14dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/txt_manager_accou"
                   android:text="Quản lý tài khoản"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textColor="@color/black"
                   android:textSize="18sp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="54dp"
               android:orientation="horizontal"
               android:layout_gravity="center">
               <ImageView
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:background="@drawable/baseline_key_black_18dp"
                   android:layout_margin="12dp"
                   android:layout_marginTop="14dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/txt_change_pass1"
                   android:text="Thay đổi mật khẩu"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textColor="@color/black"
                   android:textSize="18sp" />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="54dp"
               android:orientation="horizontal"
               android:layout_gravity="center">
               <ImageView
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:background="@drawable/baseline_key_off_black_18dp"
                   android:layout_margin="12dp"
                   android:layout_marginTop="14dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/txt_logout"
                   android:text="Đăng xuất"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textColor="@color/black"
                   android:textSize="18sp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="54dp"
               android:orientation="horizontal"
               android:layout_gravity="center">
               <ImageView
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:background="@drawable/outline_book_black_18dp"
                   android:layout_margin="12dp"
                   android:layout_marginTop="14dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/txt_change2"
                   android:text="Điều khoản dịch vụ"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textColor="@color/black"
                   android:textSize="18sp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="54dp"
               android:orientation="horizontal"
               android:layout_gravity="center">

               <ImageView
                   android:layout_width="24dp"
                   android:layout_height="wrap_content"
                   android:layout_margin="12dp"
                   android:layout_marginTop="14dp"
                   android:background="@drawable/baseline_fact_check_black_18dp" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/txt_change3"
                   android:text="Chính sách bảo mật"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textColor="@color/black"
                   android:textSize="18sp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="54dp"
               android:orientation="horizontal"
               android:layout_gravity="center"
               android:layout_marginBottom="56dp">
               <ImageView
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:background="@drawable/baseline_question_mark_black_18dp"
                   android:layout_margin="12dp"
                   android:layout_marginTop="14dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/txt_change4"
                   android:text="Trợ giúp"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textColor="@color/black"
                   android:textSize="18sp"/>
           </LinearLayout>
       </LinearLayout>

   </RelativeLayout>

</ScrollView>